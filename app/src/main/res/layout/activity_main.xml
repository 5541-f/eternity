        android:layout_row="5"
        android:layout_rowWeight=".15"
        android:text="@string/PARENTHESIS_RIGHT_LABEL"
        android:backgroundTint="#a0a0f0"
        android:layout_columnSpan="3"
        android:textSize="30sp"
