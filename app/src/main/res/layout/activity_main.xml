<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="20"
    android:rowCount="28"
    android:rowOrderPreserved="true">

    <TextView
        android:id="@+id/tvPrevious"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnSpan="20"
        android:layout_row="0"
        android:layout_rowWeight=".2"
        android:text=""
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:ellipsize="none"
        android:gravity="bottom|end|right" />

    <TextView
        android:id="@+id/tvCurrent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnSpan="20"
        android:layout_row="1"
        android:layout_rowWeight=".2"
        android:text=""
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:ellipsize="none"
        android:gravity="bottom|end|right"
        android:singleLine="true"
        android:scrollbarAlwaysDrawHorizontalTrack="false" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_columnWeight=".2"
        android:layout_row="24"
        android:layout_rowWeight=".15"
        android:text="@string/ZERO_LABEL"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:backgroundTint="#f0d080"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="20"
        android:layout_rowWeight=".15"
        android:text="@string/ONE_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="4"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="20"
        android:layout_rowWeight=".15"
        android:text="@string/TWO_LABEL"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:backgroundTint="#f0d080"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="8"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="20"
        android:layout_rowWeight=".15"
        android:text="@string/THREE_LABEL"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:backgroundTint="#f0d080"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="16"
        android:layout_rowWeight=".15"
        android:text="@string/FOUR_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="4"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="16"
        android:layout_rowWeight=".15"
        android:text="@string/FIVE_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="8"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="16"
        android:layout_rowWeight=".15"
        android:text="@string/SIX_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="12"
        android:layout_rowWeight=".15"
        android:text="@string/SEVEN_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="4"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="12"
        android:layout_rowWeight=".15"
        android:text="@string/EIGHT_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="8"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="12"
        android:layout_rowWeight=".15"
        android:text="@string/NINE_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_margin="2dp"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="12"
        android:layout_columnSpan="6"
        android:layout_columnWeight=".4"
        android:layout_row="18"
        android:layout_rowWeight=".15"
        android:text="@string/ADDITION_LABEL"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:backgroundTint="#a0a0f0"
        android:layout_rowSpan="4"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBackspace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="8"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="10"
        android:layout_rowWeight=".1"
