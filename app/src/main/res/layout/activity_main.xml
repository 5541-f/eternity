        android:layout_columnWeight=".2"
        android:layout_row="10"
        android:layout_rowWeight=".1"
        android:text="@string/CLEAR_EXPRESSION_LABEL"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="#e0f080"
        android:layout_rowSpan="2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnWeight=".3"
        android:layout_row="2"
        android:layout_rowWeight=".15"
        android:text="@string/SINE_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_columnSpan="4"
        android:layout_rowSpan="4"
        android:backgroundTint="#d080f0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExponentNatural"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="4"
        android:layout_columnWeight=".3"
        android:layout_row="2"
        android:layout_rowWeight=".15"
        android:text="@string/EXPONENT_NATURAL_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_columnSpan="4"
        android:layout_rowSpan="4"
        android:backgroundTint="#d080f0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLogarithm10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="8"
        android:layout_columnWeight=".3"
        android:layout_row="2"
        android:layout_rowWeight=".15"
        android:text="@string/LOGARITHM_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_columnSpan="4"
        android:layout_rowSpan="4"
        android:backgroundTint="#d080f0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="12"
        android:layout_columnSpan="6"
        android:layout_columnWeight=".4"
        android:layout_row="6"
        android:layout_rowWeight=".15"
        android:text="@string/DIVISION_LABEL"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:backgroundTint="#a0a0f0"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="8"
        android:layout_columnSpan="4"
        android:layout_columnWeight=".2"
        android:layout_row="24"
        android:layout_rowWeight=".15"
        android:text="@string/DOT_LABEL"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:backgroundTint="#f0d080"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExecute"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="12"
        android:layout_columnSpan="6"
        android:layout_columnWeight=".4"
        android:layout_row="22"
        android:layout_rowWeight=".2"
        android:text="@string/EXECUTE_LABEL"
        android:textAllCaps="false"
        android:textSize="70sp"
        android:backgroundTint="#f0a0a0"
        android:layout_rowSpan="6"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="12"
        android:layout_columnSpan="6"
        android:layout_columnWeight=".4"
        android:layout_row="10"
        android:layout_rowWeight=".15"
