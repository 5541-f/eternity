        android:textAllCaps="false"
        android:textSize="40sp"
        android:backgroundTint="#a0a0f0"
        android:layout_rowSpan="4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNegation"
        android:layout_width="0dp"
        android:layout_height="0dp"
